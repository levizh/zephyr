#include <dt-bindings/pinctrl/hc32-pinctrl.h>

&pinctrl {
	usart2_default: usart2_default {
		group0 {
			pinmux = <HC32_PINMUX('A', 2, FUNC, 36)>,
				<HC32_PINMUX('A', 3, FUNC, 37)>;
		};
	};

	usart4_default: usart4_default {
		group1 {
			pinmux = <HC32_PINMUX('E', 6, FUNC, 36)>,
				<HC32_PINMUX('B', 9, FUNC, 37)>;
		};
	};

	spi1_default: spi1_default {
		group1 {
			pinmux = <HC32_PINMUX('A', 8, FUNC, 43)>, /*  SCK */
				 <HC32_PINMUX('B', 0, FUNC, 40)>, /* MOSI */
				 <HC32_PINMUX('C', 5, FUNC, 41)>; /* MISO */
		};
	};

	i2c1_default: i2c1_default {
		i2c1_scl {
			pinmux = <HC32_PINMUX('D', 1, FUNC, 49)>;
		};
		i2c1_sda {
			pinmux = <HC32_PINMUX('D', 2, FUNC, 48)>;
		};
	};

	i2c2_default: i2c2_default {
		i2c2_scl {
			pinmux = <HC32_PINMUX('D', 1, FUNC, 51)>;
		};
		i2c2_sda {
			pinmux = <HC32_PINMUX('D', 2, FUNC, 50)>;
		};
	};

	i2c3_default: i2c3_default {
		i2c3_scl {
			pinmux = <HC32_PINMUX('E', 15, FUNC, 49)>;
		};
		i2c3_sda {
			pinmux = <HC32_PINMUX('B', 5, FUNC, 48)>;
		};
	};

	adc1_ch0_default: adc1_ch0_default {
			pinmux = <HC32_PINMUX('A', 0, ANALOG, 0)>; /* ADC12_IN0 */
	};
	adc1_ch1_default: adc1_ch1_default {
		pinmux = <HC32_PINMUX('A', 1, ANALOG, 0)>; /* ADC12_IN1 */
	};
	adc1_ch3_default: adc1_ch3_default {
		pinmux = <HC32_PINMUX('A', 3, ANALOG, 0)>; /* ADC12_IN3 */
	};

	tmra5_qdec_default: tmra5_qdec_default {
		postionA {
			pinmux = <HC32_PINMUX('A', 2, FUNC, 5)>;
		};
		postionB {
			pinmux = <HC32_PINMUX('A', 3, FUNC, 5)>;
		};
	};

	qspi_default: qspi_default {
		group0 {
			pinmux = <HC32_PINMUX('C', 6, FUNC, 7)>, /* qspi_clk */
			<HC32_PINMUX('C', 7, FUNC, 7)>, /* qspi_cs */
			<HC32_PINMUX('D', 8, FUNC, 7)>, /* qspi_io0 */
			<HC32_PINMUX('D', 9, FUNC, 7)>, /* qspi_io1 */
			<HC32_PINMUX('D', 10, FUNC, 7)>, /* qspi_io2 */
			<HC32_PINMUX('D', 11, FUNC, 7)>; /* qspi_io3 */
		};
	};
};