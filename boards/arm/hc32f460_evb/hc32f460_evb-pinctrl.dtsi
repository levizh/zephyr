#include <dt-bindings/pinctrl/hc32-pinctrl.h>

&pinctrl {
	usart2_default: usart2_default {
		group0 {
			pinmux = <HC32_PINMUX('A', 2, FUNC, 36)>,
				<HC32_PINMUX('A', 3, FUNC, 37)>;
		};
	};
	
	usart4_default: usart4_default {
		group1 {
			pinmux = <HC32_PINMUX('E', 6, FUNC, 36)>,
				<HC32_PINMUX('B', 9, FUNC, 37)>;
		};
	};

	spi1_default: spi1_default {
		group1 {
			pinmux = <HC32_PINMUX('A', 8, FUNC, 43)>, /*  SCK */
				 <HC32_PINMUX('B', 0, FUNC, 40)>, /* MOSI */
				 <HC32_PINMUX('C', 5, FUNC, 41)>; /* MISO */
		};
	};

	i2c3_scl_pe15: i2c3_scl_pe15 {
		group1 {
			pinmux = <HC32_PINMUX('E', 15, FUNC, 49)>;
		};
	};

	i2c3_sda_pb5: i2c3_sda_pb5 {
		group1 {
			pinmux = <HC32_PINMUX('B', 5, FUNC, 48)>;
		};
	};
};