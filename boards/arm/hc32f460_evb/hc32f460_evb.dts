/dts-v1/;
#include <xhsc/f4/hc32f460.dtsi>

/ {
	model = "xhsc, EV_F460_LQ100_Rev2.0 board";
	compatible = "xhsc,hc32f460_evb";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &usart4;
		zephyr,shell-uart = &usart4;
	};

	leds {
		compatible = "gpio-leds";
		red_led: led_0 {
			gpios = <&gpiod 3 GPIO_INT_ACTIVE_HIGH>;
			label = "User LD0";
		};
		green_led: led_1 {
			gpios = <&gpiod 4 GPIO_INT_ACTIVE_HIGH>;
			label = "User LD1";
		};
		yellow_led: led_2 {
			gpios = <&gpiod 5 GPIO_INT_ACTIVE_HIGH>;
			label = "User LD2";
		};
		blue_led: led_3 {
			gpios = <&gpiod 6 GPIO_INT_ACTIVE_HIGH>;
			label = "User LD3";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: button {
			label = "Wkup";
			gpios = <&gpiob 1 GPIO_INT_ACTIVE_LOW>;
		};
	};

	aliases {
		led0 = &green_led;
		sw0 = &user_button;
	};
};


&usart4 {
	current-speed = <115200>;
	status = "ok";
};

&dma1{
	status = "ok";
};

&spi1 {
	status = "ok";
	dma-tx-cfg =  < (HC32_DT_DMA_UNIT(DMA1) | HC32_DT_DMA_CH(1) | HC32_DT_DMA_SLOT(EVT_SRC_SPI1_SPTI)) >;
	dma-rx-cfg = < (HC32_DT_DMA_UNIT(DMA1) | HC32_DT_DMA_CH(2) | HC32_DT_DMA_SLOT(EVT_SRC_SPI1_SPRI)) >;
};



&qspi {
	status = "ok";
	dma-tx-cfg =  < (HC32_DT_DMA_UNIT(DMA1) | HC32_DT_DMA_CH(1)) >;
	dma-rx-cfg = < (HC32_DT_DMA_UNIT(DMA1) | HC32_DT_DMA_CH(2)) >;
};

&rtc{
	status = "ok";
	clock-src = <HC32_CLK_SRC_XTAL32>;
};

&can1 {
	gpios = <&gpiod 15 GPIO_INT_ACTIVE_LOW>;
};
