/dts-v1/;
#include <xhsc/f4/hc32f460.dtsi>
#include "hc32f460_evb-pinctrl.dtsi"

/ {
	model = "xhsc, EV_F460_LQ100_Rev2.0 board";
	compatible = "xhsc,hc32f460_evb";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &usart4;
		zephyr,shell-uart = &usart4;
	};

	leds {
		compatible = "gpio-leds";
		red_led: led_0 {
			gpios = <&gpiod 3 GPIO_ACTIVE_HIGH>;
			label = "User LD0";
		};
		green_led: led_1 {
			gpios = <&gpiod 4 GPIO_ACTIVE_HIGH>;
			label = "User LD1";
		};
		yellow_led: led_2 {
			gpios = <&gpiod 5 GPIO_ACTIVE_HIGH>;
			label = "User LD2";
		};
		blue_led: led_3 {
			gpios = <&gpiod 6 GPIO_ACTIVE_HIGH>;
			label = "User LD3";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: button {
			label = "Wkup_key";
			gpios = <&gpiob 1 GPIO_ACTIVE_LOW>;
		};
	};

	aliases {
		led0 = &green_led;
		sw0 = &user_button;
		watchdog0 = &wdt;
	};
};
&gpioa {
	status = "okay";
};

&gpiob {
	status = "okay";
};

&gpioc {
	status = "okay";
};

&gpiod {
	status = "okay";
};

&gpioe {
	status = "okay";
};

&gpioh {
	status = "okay";
};

&clk_xtal {
	status = "okay";
};

&clk_xtal32 {
	status = "okay";
};

&clk_hrc {
	status = "okay";
};

&clk_mrc {
	status = "okay";
};

&clk_lrc {
	status = "okay";
};

&clk_pll {
	status = "okay";
};

&usart4 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&usart4_default>;
	pinctrl-names = "default";
};

&spi1 {
	status = "okay";
	pinctrl-0 = <&spi1_default>;
	pinctrl-names = "default";
	cs-gpios = <&gpioa 7 GPIO_ACTIVE_LOW>;
};

&wdt {
    status = "okay";
};