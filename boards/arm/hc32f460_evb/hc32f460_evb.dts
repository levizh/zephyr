/dts-v1/;
#include <xhsc/f4/hc32f460.dtsi>

/ {
	model = "xhsc, EV_F460_LQ100_Rev2.0 board";
	compatible = "xhsc,hc32f460_evb";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		red_led: led_0 {
			gpios = <&gpiod 3 GPIO_INT_ACTIVE_HIGH>;
			label = "User LD0";
		};
		green_led: led_1 {
			gpios = <&gpiod 4 GPIO_INT_ACTIVE_HIGH>;
			label = "User LD1";
		};
		yellow_led: led_2 {
			gpios = <&gpiod 5 GPIO_INT_ACTIVE_HIGH>;
			label = "User LD2";
		};
		blue_led: led_3 {
			gpios = <&gpiod 6 GPIO_INT_ACTIVE_HIGH>;
			label = "User LD3";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: button {
			label = "Wkup";
			gpios = <&gpiob 1 GPIO_INT_ACTIVE_LOW>;
		};
	};

	aliases {
		led0 = &green_led;
		sw0 = &user_button;
	};
};
