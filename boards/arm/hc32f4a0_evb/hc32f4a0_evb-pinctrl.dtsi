#include <dt-bindings/pinctrl/hc32-pinctrl.h>

&pinctrl {
	usart2_default: usart2_default {
		group0 {
			pinmux = <HC32_PINMUX('A', 2, FUNC, 36, 0)>,
				<HC32_PINMUX('A', 3, FUNC, 37, 0)>;
		};
	};

	usart4_default: usart4_default {
		group1 {
			pinmux = <HC32_PINMUX('E', 6, FUNC, 36, 0)>,
				<HC32_PINMUX('B', 9, FUNC, 37, 0)>;
		};
	};

	spi6_default: spi6_default {
		group1 {
			pinmux = <HC32_PINMUX('E', 3, FUNC, 46, 0)>, /*  SCK */
				 <HC32_PINMUX('E', 4, FUNC, 47, 0)>, /* MOSI */
				 <HC32_PINMUX('E', 5, FUNC, 48, 0)>; /* MISO */
		};
	};

	i2c1_default: i2c1_default {
		i2c1_scl {
			pinmux = <HC32_PINMUX('D', 3, FUNC, 49, 0)>;
		};
		i2c1_sda {
			pinmux = <HC32_PINMUX('F', 10, FUNC, 48, 0)>;
		};
	};

	i2c2_default: i2c2_default {
		i2c2_scl {
			pinmux = <HC32_PINMUX('D', 1, FUNC, 51, 0)>;
		};
		i2c2_sda {
			pinmux = <HC32_PINMUX('D', 2, FUNC, 50, 0)>;
		};
	};

	i2c3_default: i2c3_default {
		i2c3_scl {
			pinmux = <HC32_PINMUX('I', 5, FUNC, 53, 0)>;
		};
		i2c3_sda {
			pinmux = <HC32_PINMUX('I', 6, FUNC, 52, 0)>;
		};
	};

	i2c4_default: i2c4_default {
		i2c4_scl {
			pinmux = <HC32_PINMUX('G', 12, FUNC, 53, 0)>;
		};
		i2c4_sda {
			pinmux = <HC32_PINMUX('G', 13, FUNC, 52, 0)>;
		};
	};

	adc1_ch0_default: adc1_ch0_default {
			pinmux = <HC32_PINMUX('A', 0, ANALOG, 0, 0)>; /* ADC12_IN0 */
	};
	adc1_ch1_default: adc1_ch1_default {
		pinmux = <HC32_PINMUX('A', 1, ANALOG, 0, 0)>; /* ADC12_IN1 */
	};
	adc1_ch3_default: adc1_ch3_default {
		pinmux = <HC32_PINMUX('A', 3, ANALOG, 0, 0)>; /* ADC12_IN3 */
	};

	tmra9_qdec_default: tmra9_qdec_default {
		postionA {
			pinmux = <HC32_PINMUX('G', 4, FUNC, 4, 0)>;
		};
		postionB {
			pinmux = <HC32_PINMUX('G', 5, FUNC, 4, 0)>;
		};
	};
};