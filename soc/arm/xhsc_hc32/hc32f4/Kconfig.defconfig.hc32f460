if SOC_HC32F460

config SOC
	string
	default "hc32f460"

config NUM_IRQS
	int
	# must be >= the highest interrupt number used
	default 143

config SYS_CLOCK_TICKS_PER_SEC
	default 1000

config SYS_CLOCK_HW_CYCLES_PER_SEC
	default 8000000

config HC32_DDL_DEBUG
	bool "if enable assert function in hc32_ddl drivers"
	default n

if GPIO

config GPIO_HC32
	default y

endif # GPIO

if PINMUX

config PINMUX_HC32
	default y

endif #PINMUX

if SPI

config SPI_HC32
	default y

endif #SPI

endif # SOC_HC32F460
