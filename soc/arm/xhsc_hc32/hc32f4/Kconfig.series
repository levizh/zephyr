config SOC_SERIES_HC32F4
	bool "xhsc hc32f4 series MCU"
    select ARM
	select SOC_FAMILY_HC32
	select CPU_CORTEX_M_HAS_SYSTICK
	select CPU_CORTEX_M_HAS_VTOR
	select CPU_CORTEX_M4
	select CPU_HAS_ARM_MPU
	select CPU_HAS_FPU
	select HAS_HC32_DDL
	select CLOCK_CONTROL_HC32 if CLOCK_CONTROL
	help
	  Enable support for xhsc hc32f4 MCU series
