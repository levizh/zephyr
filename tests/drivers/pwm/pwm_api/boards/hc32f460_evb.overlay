&pinctrl {
	pwm_default: pwm_default {
		group1 {
			pinmux = <HC32_PINMUX('D', 12, FUNC, 4, 0)>; /* PWM1 */
		};
	};
};

&timera4 {
	clock-division = <HC32_TMR_CNT_CLK_DIV1>;
	count-mode = <HC32_TMR_CNT_MD_TRIANGLE>;
	count-direction = <HC32_TMR_CNT_DIR_DOWN>;
	status = "okay";

	pwm_hc32: pwm {
		status = "okay";
		pinctrl-0 = <&pwm_default>;
		pinctrl-names = "default";
	};
};


/{
	aliases {
	pwm-0 = &pwm_hc32;
	};
};
